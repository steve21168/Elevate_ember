{{yield}}
{{#if isEditing}}
  <form class="" {{action 'submit' on='submit'}}>
    <h3><label for="name">Rename:</label></h3>
    <h3> {{input id="name" value=goal.name}}</h3>
    <h3><label for="startDate">Start Date:</label></h3>
    {{input type="date" value=goal.startDate}}
    <h3><label for="endDate">End Date:</label></h3>
    {{input type="date" value=goal.endDate}} <br> <br>
    <button type="submit" class="btn btn-default">Update Goal</button>
  </form>
{{else}}
  <h1 class="underline">{{goal.name}}</h1>
  <div class="glyphicon glyphicon-pencil" {{action 'edit' goal}}></div>
  <div class="glyphicon glyphicon-ok-circle" {{action 'completeGoal' goal}}></div>
  <div class="glyphicon glyphicon-remove-circle" {{action 'delete' goal}}></div>

  <br>

  start: {{format-dates goal.startDate}}  end: {{ format-dates goal.endDate}}
{{/if}}
