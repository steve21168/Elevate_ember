{{outlet}}
<div class="center">
  <h1>{{model.name}}</h1> <br>

  {{in-progress listItems=model.listItems switchComplete=(action "completed") removeItem=(action "deleteItems")}}
  <br>
  {{now-completed listItems=model.listItems switchComplete=(action "completed") removeItem=(action "deleteItems")}}

  <br><br>

  <button class="btn btn-default" {{action "addListInput"}}> Create List Item </button> <br><br>
  {{#each listItems as |listItem|}}
    {{list-item item=listItem }}
  {{/each}}

  {{#if listItems}}
    <button class="btn btn-default" {{action "removeListInput"}}> Remove List Item </button>
    <button class="btn btn-default" {{action "saveItems"}}>Save items</button>
  {{/if}}
</div>
