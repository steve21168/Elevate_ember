<div class="center">
  <form {{action 'create' on='submit'}}>
    <label>Name:</label> <br>
    {{input id='name' value=model.name}} <br>
    <label>Email:</label> <br>
    {{input id='email' value=model.email}} <br>
    <label>Password:</label> <br>
    {{input type='password' value=model.password}} <br>
    <label>Password Confirmation:</label> <br>
    {{input type='password' value=model.password_confirmation}} <br> <br>
    <button type="submit" class="btn btn-default">Create User</button> <br>
  </form>
  <br>
    {{link-to 'Log In' 'login'}}
</div>
